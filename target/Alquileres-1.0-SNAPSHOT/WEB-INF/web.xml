<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/alquileres</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcUSER</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcPASS</param-name>
        <param-value>admin</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VistasServlet</servlet-name>
        <servlet-class>controlador.VistasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InquilinosServlet</servlet-name>
        <servlet-class>controlador.InquilinosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PropiedadServlet</servlet-name>
        <servlet-class>controlador.PropiedadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagosServlet</servlet-name>
        <servlet-class>controlador.PagosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContratosServlet</servlet-name>
        <servlet-class>controlador.ContratosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VistasServlet</servlet-name>
        <url-pattern>/VistasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InquilinosServlet</servlet-name>
        <url-pattern>/InquilinosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PropiedadServlet</servlet-name>
        <url-pattern>/PropiedadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagosServlet</servlet-name>
        <url-pattern>/PagosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContratosServlet</servlet-name>
        <url-pattern>/ContratosServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
